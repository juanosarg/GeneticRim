<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	
	<RecipeDef>
		<defName>GR_RecombineGenes</defName>
		<label>recombine genes</label>
		<description>Recombine genes from one or several species to get new ones.</description>
		<jobString>Recombining Genetic Material</jobString>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workAmount>500</workAmount>
		<workSkill>Intellectual</workSkill>
		<allowMixingIngredients>true</allowMixingIngredients>

		<recipeUsers>
				<li>GR_GeneRecombinator</li>	  
		</recipeUsers>	
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>GR_RodentGenetic</li>
						<li>GR_BearGenetic</li>
						<li>GR_ChickenGenetic</li>
						<li>GR_BoomalopeGenetic</li>
						<li>GR_MuffaloGenetic</li>
						<li>GR_WolfGenetic</li>
						<li>GR_FelineGenetic</li>
						<li>GR_InsectoidGenetic</li>
						<li>GR_ReptilianGenetic</li>
						<li>GR_HumanoidGenetic</li>
						<li>GR_ThrumboGenetic</li>
						<li>GR_NonSpecializedGenetic</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
		
			<thingDefs>
						<li>GR_RodentGenetic</li>			
						<li>GR_BearGenetic</li>
						<li>GR_ChickenGenetic</li>
						<li>GR_BoomalopeGenetic</li>
						<li>GR_MuffaloGenetic</li>
						<li>GR_WolfGenetic</li>
						<li>GR_FelineGenetic</li>
						<li>GR_InsectoidGenetic</li>
						<li>GR_ReptilianGenetic</li>
						<li>GR_HumanoidGenetic</li>
						<li>GR_ThrumboGenetic</li>
						<li>GR_NonSpecializedGenetic</li>
					</thingDefs>
		</fixedIngredientFilter>
		<products>
			<GR_StabilizingGenes>1</GR_StabilizingGenes>
		</products>
		<skillRequirements>
			<Intellectual>5</Intellectual>
		</skillRequirements>
	</RecipeDef>
	
