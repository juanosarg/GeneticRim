				<xpath>/Defs/RecipeDef[defName = "GR_ExtractGenesMechanoid"]/fixedIngredientFilter/thingDefs</xpath>
				<value>
					<li>Corpse_HRHM_Mech_Zealot</li>
					<li>Corpse_HRHM_Mech_Ranger</li>
					<li>Corpse_HRHM_Mech_Marshal</li>
					<li>Corpse_HRHM_Mech_Hunter</li>
